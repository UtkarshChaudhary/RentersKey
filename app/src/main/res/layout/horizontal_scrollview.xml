<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/horizontalScrollview_mar"
    android:layout_marginRight="@dimen/horizontalScrollview_mar"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="@dimen/horizontalScrollview_itemWidth"
        android:layout_height="match_parent"
        android:background="@color/white"
       >
<ImageView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/horizontalScrollview_imagesize"
    android:layout_width="match_parent"
    android:id="@+id/horizontalscrollview_imageview">

</ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/horizontalScrollview_textviewSize"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:id="@+id/horizontalscrollview_textview"
        android:textSize="@dimen/horizontalScrollview_textsize"
        android:layout_below="@+id/horizontalscrollview_imageview"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>