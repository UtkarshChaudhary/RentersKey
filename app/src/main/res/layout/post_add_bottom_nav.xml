<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Cancel"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:id="@+id/cancel_button_post_add"
        android:layout_marginBottom="@dimen/postadd_acticity_buttonMargin_vertical"
        android:layout_marginTop="@dimen/postadd_acticity_buttonMargin_vertical"
        android:layout_marginLeft="@dimen/postadd_acticity_buttonMargin_horizontal"
        android:layout_marginRight="@dimen/postadd_acticity_buttonMargin_horizontal"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:id="@+id/continue_post_add"
        android:layout_marginBottom="@dimen/postadd_acticity_buttonMargin_vertical"
        android:layout_marginTop="@dimen/postadd_acticity_buttonMargin_vertical"
        android:layout_marginLeft="@dimen/postadd_acticity_buttonMargin_horizontal"
        android:layout_marginRight="@dimen/postadd_acticity_buttonMargin_horizontal"/>

</LinearLayout>