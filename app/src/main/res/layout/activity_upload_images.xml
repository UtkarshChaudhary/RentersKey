<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    tools:context="com.example.lenovo.renterskey.Activities.UploadImages"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_uploadImages"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/upload_images_view"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:orientation="vertical"
           >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:text="Upload images of product(atleast one)"
           android:textColor="@color/gray"
           android:textSize="20dp"
           android:layout_gravity="left"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="20dp"
           />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true"
                android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/uplaod_images_horizontalLinearLayout_padding_horizontal"
                android:paddingRight="@dimen/uplaod_images_horizontalLinearLayout_padding_horizontal"
                android:layout_marginBottom="@dimen/uplaod_images_horizontalLinearLayout_padding_vertical">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="@dimen/upload_images_ImageButtonHeight"
                    android:text="Select Image1"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/textview_border"
                    android:layout_marginRight="@dimen/upload_images_horizontalLinearLayout_margin_horizonatal"
                    android:id="@+id/image1_imagebutton"
                    android:layout_marginLeft="@dimen/upload_images_horizontalLinearLayout_margin_horizonatal"
                   />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/upload_images_uploadButtomHeight"
                    android:text="upload"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/upload_images_horizontalLinearLayout_margin_horizonatal"
                    android:id="@+id/upload_image1_button"
                    android:background="@drawable/textview_border"
                    />

            </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp" />
       </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_uploadImages"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/blue"
        app:menu="@menu/upload_images_bottom_nav"
        app:itemTextColor="@color/white"

       />



</android.support.design.widget.CoordinatorLayout>

